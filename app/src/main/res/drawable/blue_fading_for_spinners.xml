<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:bottom="-2dp"
        android:left="-6dp"
        android:right="-6dp"
        android:top="-6dp">
        <shape android:shape="rectangle" >
            <stroke
                android:width="5dp"
                android:color="#4000AEF5" />

            <gradient
                android:angle="180"
                android:endColor="#0A000000"
                android:startColor="#00000000" />

            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" >
            </padding>
        </shape>
    </item>

</layer-list>