<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="CustomDialogTheme" parent="@android:style/Theme.DeviceDefault.Light.Dialog">
        <item name="android:windowBackground">@color/WhiteTranslucent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowAnimationStyle">@android:style/Theme.Dialog</item>
    </style>
    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/half_black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardViewStyle.Light" parent="CardView.Light">
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="EditTextStyle" parent="android:style/Widget.EditText">
        <item name="android:background">@drawable/edit_text_selector</item>
        <item name="android:textColor">#333333</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorPrimaryInverse">#000000</item>
    </style>



</resources>