<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/subject_card_frame_layout">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/subject_card"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="2dp"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="4dp">


        <RelativeLayout
            android:id="@+id/subject_card_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="100">

            <TextView
                android:id="@+id/subject_card_name_textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/subject_card_grade_editText"
                android:layout_toStartOf="@+id/subject_card_grade_editText"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxEms="12"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="MMMMMMMMMMMMMMMMM"
                android:textColor="@android:color/black"
                android:textScaleX=".94"
                android:textSize="28sp" />

            <EditText
                android:id="@+id/subject_card_grade_editText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:hint="###"
                android:imeOptions="actionDone"
                android:minEms="2"
                android:numeric="integer"
                android:textSize="28sp" />


            <!--This is just so once card is complete and edited, it locks in. -->
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>




