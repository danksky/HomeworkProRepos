<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100">

        <EditText
            android:id="@+id/dialog_edit_subject_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="16dp"
            android:layout_toLeftOf="@+id/dialog_edit_subject_card_grade"
            android:layout_toStartOf="@+id/dialog_edit_subject_card_grade"
            android:hint="@string/edit_subject_hint"
            android:imeOptions="actionNext"
            android:inputType="textCapWords"
            android:scrollHorizontally="true" />

        <EditText
            android:id="@+id/dialog_edit_subject_card_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:hint="###"
            android:imeOptions="actionDone"
            android:inputType="number|none"
            android:minEms="2"
            android:maxEms="3"
            android:maxLength="3"/>
    </RelativeLayout>

</LinearLayout>